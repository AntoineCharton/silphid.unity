<log4net>

    <!-- UnityAppender is set to be a Unity console appender -->
    <appender name="UnityAppender" type="Silphid.Extensions.UnityAppender">
 
        <!-- UnityAppender uses PatternLayout -->
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%-4timestamp [%thread] %-5level %logger %ndc - %message%newline" />
        </layout>
    </appender>

    <!-- UnityFileAppender is set to be a File appender -->
    <!--<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
        <file value="UnityFileAppender.log" />
        <appendToFile value="true" />
        <maximumFileSize value="100KB" />
        <maxSizeRollBackups value="2" />
 
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%-4timestamp [%thread] %-5level %logger %ndc - %message%newline" />
        </layout>
    </appender>-->
    
    <!-- Set root logger level to DEBUG and its appender is set to UnityAppender and UnityFileAppender-->
    <root>
        <level value="DEBUG" />
        <appender-ref ref="UnityAppender" />
        <!--<appender-ref ref="RollingFileAppender"/>-->
    </root>
</log4net>